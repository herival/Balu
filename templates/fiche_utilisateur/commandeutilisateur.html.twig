{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<h1  class="h3 mt-2 mb-2 font-weight" style="font-size: 4em">Mon compte</h1>



<div class="container-fluid">

    <div class="row tableaudebord ">


      <div class="col-md-6 mx-auto ">
        <div class="card shadow mb-4 bg-trans">
 
          {# <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Mon compte</h6>
          </div> #}
      
          <div class="card-body">

            <table class="table table-bordered bg-trans">

                <thead class="thead-dark text-uppercase text-center">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col" style="width: 10%;">Date</th>
                        <th scope="col">Etat</th>
                        <th scope="col">Montant</th>
                        <th scope="col">Action</th>

                    </tr>
                </thead>
                <tbody>
            
                 {% for commande in liste_commande.commandes %}
                    <tr>
                        <td> {{ commande.id }} </td>
                        <td> {{ commande.date |date("d/m/Y") }} </td>
                        <td class="text-center"> {{ commande.etat }} </td>
                        <td class="text-right"> {{ commande.montant }} â‚¬ </td>
                        <td class="text-center"> 
                            <a href="{{path('detail_commande_utilisateur', {'id':commande.id})}}" title="Detail"><i class="fa fa-eye"></i> </a> 
                        </td>
                    </tr>
                {% endfor %} 
                </tbody>
            </table>
              
          </div>
        </div>
        <div class="text-center">
          <a href="{{path('fiche_utilisateur')}}"  class="btn btn-info shadow-sm mb-2">Retour</a>
        </div>

      </div>


    </div>
</div>

{% endblock %}
