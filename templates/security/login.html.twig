{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="col-md-4 mx-auto">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mt-2 mb-2 font-weight" style="font-size: 5em">Connexion</h1>
    <label for="inputEmail" style="color:yellow;">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Votre adresse email" required autofocus>
    
        <label for="inputPassword" class="mt-4" style="color:yellow;">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Veuillez entrer votre mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <div class="text-center mt-5">
        <input type="submit" class="btn btn-lg btn-success" value="Se connecter">
    </div>

</form>
{% endblock %}
