{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    span{font-family: inherit!important; color: inherit; font-size: inherit;}
</style>
<div class="container">
    <h1 class="h3 mt-2 mb-2 font-weight" style="font-size: 5em">Inscription</h1>

    <div class="text-dark col-lg-6 mx-auto rounded-lg bg-trans">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.pseudo) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.cp) }}
        {{ form_row(registrationForm.ville) }}

        {{ form_row(registrationForm.agreeTerms) }}

        <div class="text-center mt-3 mb-4">
            <input type="submit" class="btn btn-lg btn-success" value="Enregistrer">
        </div>

    {{ form_end(registrationForm) }}
    </div>

</div>
{% endblock %}
