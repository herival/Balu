{% extends 'basebackoffice.html.twig' %}

{% block title %}Detail commande{% endblock %}

{% block body %}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Details commandes</h1>
      <a href="{{ path('accueil') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Retour sur le site</a>


    </div>

    <div class="row tableaudebord">


      <div class="col-lg-4">
        <div class="card shadow mb-4">
 
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Commande Ref: {{membre.id }}  </h6>
          </div>
      
          <div class="card-body">

            <ul class="list-group">
                <li class="list-group-item ">Reference : {{membre.id }}</li>
                <li class="list-group-item">Nom : {{membre.membre.nom }}</li>
                <li class="list-group-item">Prenom : {{membre.membre.prenom }}</li>
                <li class="list-group-item">Adresse : {{membre.membre.adresse }}</li>
                <li class="list-group-item">Date : {{membre.date |date("m/d/Y")}}</li>
                <li class="list-group-item">Etat : {{membre.etat }}</li>
              </ul>

          </div>
        </div>
      </div>


      <div class="col-lg-8">
        <div class="card shadow mb-4">
 
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Details commandes</h6>
          </div>
      
          <div class="card-body">

            <table class="table table-bordered">

                <thead class="thead-dark text-uppercase text-center">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Recette</th>
                        <th scope="col ">Prix</th>
                        <th scope="col">Quantite</th>
                        <th scope="col">Montant</th>
                    </tr>
                </thead>
                <tbody>
                    {% for detail in commande_detail %}
                        <tr>
                            <td> {{ detail.id }} </td>
                            <td> Ref: {{ detail.recette.id }} - 
                                {{ detail.recette.titre }}
                            </td>
                            <td class="text-right"> {{ detail.recette.prix }} </td>
                            <td class="text-right"> {{ detail.quantite }} </td>
                            <td class="text-right"> {{ detail.prix }} €</td>
                        
                        </tr>
                        
      
                    {% endfor %}
                </tbody>
                <tfoot>
                 
                        <tr >
                            <th colspan="4" class="text-right">
                                Total :
                            </th>
                            <th class="text-right border-top ">{{ membre.montant }} €</th>
                           
                        </tr>
                   
                    
                </tfoot>
        
            </table>

          </div>
        </div>
      </div>

    </div>

{% endblock %}
